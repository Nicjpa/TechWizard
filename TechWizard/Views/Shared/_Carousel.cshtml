@using TechWizard.Business.ViewModels
@model PublicHardwareViewModel

<div id="demo" class="carousel slide" data-ride="carousel">

  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#demo" data-slide-to="0" class="active"></li>

    @for(int i = 1; i < Model.HardwareViewDTOs.Count; i++)
    {
        <li data-target="#demo" data-slide-to=@i></li>
    }
  </ol>

  <!-- The slideshow -->
  <div class="carousel-inner">

    <div class="carousel-item active">
        <img class="carouselPic" src="@Model.HardwareViewDTOs[0].Picture" alt="car.Name">
        <div class="carousel-caption">
                <h3><a class="propHardware" asp-controller="Hardware" asp-action="HardwareDetails" asp-route-id="@Model.HardwareViewDTOs[0].Id">@Model.HardwareViewDTOs[0].Name</a></h3>
                <h5 class="priceTag">@Model.HardwareViewDTOs[0].Price.ToString("c")</h5>
           </div>
    </div>

    @for(int i = 1; i < Model.HardwareViewDTOs.Count; i++)
    {
        <div class="carousel-item">
            <img class="carouselPic" src="@Model.HardwareViewDTOs[i].Picture" alt="@Model.HardwareViewDTOs[i].Name">
            <div class="carousel-caption">
                <h3><a class="propHardware" asp-controller="Hardware" asp-action="HardwareDetails" asp-route-id="@Model.HardwareViewDTOs[i].Id">@Model.HardwareViewDTOs[i].Name</a></h3>
                <h5 class="priceTag">@Model.HardwareViewDTOs[i].Price.ToString("c")</h5>
           </div>
        </div>
    }

  </div>

  <!-- Left and right controls -->
  <a class="carousel-control-prev" href="#demo" data-slide="prev">
    <span class="carousel-control-prev-icon"></span>
  </a>
  <a class="carousel-control-next" href="#demo" data-slide="next">
    <span class="carousel-control-next-icon"></span>
  </a>
</div>
