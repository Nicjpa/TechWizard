@using System.Globalization
@using TechWizard.Business.ViewModels.DTOs
@using TechWizard.Data.Models.Entities
@using TechWizard.Data.Roles
@model ProductViewDTO


<div class="col-lg-3 col-lg-3 col-lg-3">
    <div class="card">
        <a class="cardTouch" asp-controller="Hardware" asp-action="HardwareDetails" asp-route-id="@Model.Id">
            <div class="card-header">
                <img src="@Model.Picture" alt="@Model.Name" class="card-img" />
            </div>
        
        <div class="card-body">
            <p class="productCode">Product Code: @Model.ProductCode</p>
            <div id="PNdiv">
                <h5 id="productName">@Model.Name</h5>
            </div>
            <p id="productPrice">Price: @Model.Price$</p>
        </div>
        </a>
        @if (!User.IsInRole(Roles.adminRole))
        {
            <div class="card-footer">
                <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddItemToCart" asp-route-productId="@Model.Id">Add to cart</a>
            </div>
        }
    </div>
</div>



