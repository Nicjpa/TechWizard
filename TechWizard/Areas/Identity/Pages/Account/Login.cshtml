@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<div class="row loginStylingContainer" style="max-height: 300px;">
    
    <div class="col-md-4 loginStylingDiv">
        <section>
            <div class=" wizAnime wizardAdminGlow" >
                <img src="/mySVGs/techWizBlack.svg"  id="loginSVG">
            </div>
            <h1 id="loginTitle"><span class="post">]|[</span> Enter The Guild <span class="post">]|[</span></h1>
            <form id="account" method="post">
                <hr />
                <div class="form-group">
                    <label asp-for="Input.Email" class="loginLabelStyle"></label>
                    <input asp-for="Input.Email" class="form-control loginInput" autocomplete="off"/>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password" class="loginLabelStyle"></label>
                    <input asp-for="Input.Password" class="form-control loginInput" autocomplete="off"/>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div >
                    <div class="form-group loginInlineElements">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group loginInlineElements">
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Become a member</a>
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btnStyle">Summon me</button>
                </div>
                
            </form>
        </section>
    </div>
